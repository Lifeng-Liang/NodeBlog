
<div class="page-header">
<h1>{{article.title}}</h1>
</div>

<blockquote class="bs-callout-danger">
    <p>作者：{{user.show_name}}</p>
    <p><a href="/article/edit/{{article.id}}">编辑</a></p>
    <footer>{{article.created_on}} (阅读:<span class="text-danger">{{article.views_count}}</span>)</footer>
</blockquote>

{{{article.content}}}

<hr />

<a id="comment" name="comment"></a>
{{#each comments}}
<div class="panel panel-default">
    <div class="panel-heading">
        {{writer}} | {{saved_on}} | <a href="/comment/destroy/{{id}}">destroy</a>
    </div>
    <div class="panel-body">
        <p>{{content}}</p>
    </div>
</div>
{{/each}}

<hr />

<a id="comment_input" name="comment_input"></a>
<form action="/comment/create/{{article.id}}" method="post">
    <div class="form-group">
        <label for="comment_writer">作者</label>
            <input id="comment_writer" name="comment[writer]" type="text" class="form-control" maxlength="50" size="50" value="" />
    </div>
    <div class="form-group">
        <label for="comment_content">内容</label>
        <textarea id="comment_content" name="comment[content]" class="form-control" cols="50" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-default">提交</button>
</form>

